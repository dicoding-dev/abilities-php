{
    "name": "dicoding-dev/abilities-php",
    "description": "A core package for managing the authorization through CanCanCan style. With supports of granularity based on Attributes Based Access Control.",
    "type": "library",
    "license": "MIT",
    "version": "0.5.0-stable",
    "scripts": {
        "test": "./vendor/bin/pest"
    },
    "require": {
        "php": ">=7.3.0"
    },
    "authors": [
        {
            "name": "AlexzPurewoko",
            "email": "purwoko908@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Abilities\\": "src/Abilities"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "require-dev": {
        "pestphp/pest": "2.x-dev",
        "mockery/mockery": "2.0.x-dev"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
